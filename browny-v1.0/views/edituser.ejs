<body>
  <%- include('./main/siderbar.ejs') %>
  <div class="main-content ml-2 col-10" >
    <div class="row text-center">
      <h1>EDIT PROFILE USER </h1> 
    </div>
    <form action="/admin/update" method="post" enctype="multipart/form-data">
    <div class="row justify-content-center">
        <div class="col-5 border border-dark rounded p-3 ">
           <div class="row mb-5 overflow-hidden ">
              <div class="form-group">
                 <label>Họ và Tên</label>
                 <input type="text" class="form-control" id="email" value="<%= data[0].ten %>" name="ten">
              </div>
              <div class="form-group">
                 <label>Công việc</label>
                 <input type="text" class="form-control" id="email" value="<%= data[0].congviec %>" name="congviec">
              </div>            
              <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" class="form-control" id="email" value="<%= data[0].sdt %>" name="sdt">
              </div>              
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" id="email" value="<%= data[0].gmail %>" name="gmail">
              </div>            
              <div class="form-group">
                <label>Mô tả </label>
                <textarea type="text" class="form-control" id="email" name="thongtin1"><%= data[0].thongtin1 %></textarea>
              </div>
              <div class="form-group">
                <label>Giới thiệu </label>
                <textarea type="text" class="form-control" id="email"  name="thongtin2"><%= data[0].thongtin2 %></textarea>
              </div>
               <div class="form-group">
                <lable>Ảnh đại diện</lable>
                <div class="col-sm-offset-1 col-sm-5">
                  <div class="single-about-img">
                    <img src="<%= data[0].hinhnen %>"class="card-img-top img-fluid" alt="profile_image">
                </div>  
                </div>
                <input type="file" name="daidien" >
              </div>
              <div class="form-group">
                <lable>Avarta</lable>
                <div class="col-sm-offset-1 col-sm-5">
                  <div class="single-about-img">
                    <img src="<%= data[0].daidien %>"class="card-img-top img-fluid" alt="profile_image">
                </div>  
                </div>
                <input type="file" name="hinhnen" >
              </div>
               <button type="submit" class="btn btn-default btn-dark mt-2 mb-2 " >UPDATE</button>
               <button type="button" class="btn btn-dark btn-default " ><a href="/admin" class="nav-link text-white" >RETURN</a></button>
            </div>
       </div> 
    </div>
</form>
  </div>
      


</body>
